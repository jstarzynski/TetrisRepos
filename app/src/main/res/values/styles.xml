<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" >
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="android:textColorSecondary">@color/toolbarTextColor</item>
        <item name="actionMenuTextColor">@color/toolbarTextColor</item>
        <item name="colorAccent">@color/toolbarTextColor</item>
        <item name="android:textColorHint">@color/toolbarHintColor</item>
    </style>

</resources>
